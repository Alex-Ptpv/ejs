<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f8f8f8;
      color: #333;
    }

    .info {
      background-color: #cbc7c7;
    }

    main {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: #bdbdbd; /* Light grey */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    .jumbotron {
      background-color: #757575; /* Dark grey */
      color: #fff;
      padding: 20px;
      text-align: center;
    }

    h1 {
      margin-bottom: 10px;
      color: #757575; /* Dark grey */
      text-align: center;
    }

    form {
      margin-top: 20px;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    button {
      background-color: #424242; /* Grey */
      color: #fff;
      padding: 10px;
      border: none;
      cursor: pointer;
    }

    h2 {
      margin-top: 20px;
    }

    #content {
      margin: 20px 0;
    }
    .list-title {
      text-align: center;
    }
    .customer-list {
      list-style-type: none;
      padding: 0;
      margin: 30px;
    }

    .customer-item {
      background-color: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 15px;
      padding: 20px;
      text-align: left;
    }

    .customer-name {
      color: #343a40;
      font-weight: bold;
    }

    .customer-details {
      display: inline-block;
      margin: 6px;
      color: #6183a2;
    }
  </style>
</head>
<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header> 
  <main>
    <div id="content">
      <!-- pages/index.ejs -->
      <h2 class="list-title">List of customers</h2>
        <ul class="customer-list">
          <% data.customers.forEach(function(customer) { %>    
            <li class="customer-item">
              <strong class="customer-name">Name: &nbsp; <%= customer.customer_name %></strong><br>
              Address: &nbsp; <span class="customer-details"><%= customer.address %></span><br>
              City: &nbsp; <span class="customer-details"><%= customer.city %></span><br>
              Postal code: &nbsp; <span class="customer-details"><%= customer.postal_code %></span><br>
              Country: &nbsp; <span class="customer-details"><%= customer.country %></span><br>
              Contact name: &nbsp; <span class="customer-details"><%= customer.contact_name %></span><br>
              ID: &nbsp; <span class="customer-details"><%= customer.customer_id %></span><br>
            </li>
          <% }); %>
        </ul>
    </div>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>
</html>
